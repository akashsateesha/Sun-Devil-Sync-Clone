{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "globals": {
    "api": "readonly",
    "auth": "readonly",
    "currentUser": "readonly",
    "getUrlParameter": "readonly",
    "showToast": "readonly",
    "formatDate": "readonly",
    "formatTime": "readonly",
    "toggleGroupMembership": "readonly",
    "toggleEventRSVP": "readonly",
    "loadFromStorage": "readonly",
    "toggleBookmark": "readonly"
  },
  "rules": {
    "import/no-unresolved": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "blockchain/node_modules/",
    "blockchain/artifacts/",
    "blockchain/cache/",
    "blockchain/abi/",
    "database.sqlite"
  ]
}
